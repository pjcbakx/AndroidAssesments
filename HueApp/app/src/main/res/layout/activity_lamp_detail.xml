<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.patrick.hueapp.LampDetailActivity">


    <EditText
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName"
        android:layout_marginBottom="10dp" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButtonOn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:id="@+id/textViewColor" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max = "65535"
        android:id="@+id/seekBarHue"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness:"
        android:id="@+id/textViewBri" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max = "255"
        android:id="@+id/seekBarBri"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturation:"
        android:id="@+id/textViewSat" />

    <SeekBar
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:max = "255"
        android:id="@+id/seekBarSat"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to Lamp"
        android:id="@+id/buttonSend"
        android:clickable="false"
        android:visibility="gone"/>
</LinearLayout>
